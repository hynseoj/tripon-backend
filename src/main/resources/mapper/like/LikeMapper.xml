<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.tripon.like.domain.LikeRepository">

    <insert id="save" parameterType="Like" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO liked_reviews (email, review_id)
        VALUES (#{email}, #{reviewId})
    </insert>

    <select id="getCountByReviewId" parameterType="Integer" resultType="Integer">
        SELECT COUNT(*)
        FROM liked_reviews
        WHERE review_id = #{reviewId}
    </select>

    <delete id="delete" parameterType="map">
        DELETE FROM liked_reviews
        WHERE review_id = #{reviewId} AND email = #{email}
    </delete>

</mapper>